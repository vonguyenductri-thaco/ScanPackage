<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ScanPackage"
             x:Class="ScanPackage.LiveOcrPage"
             Title="Quét số Container"
             BackgroundColor="Black">
    <Grid RowDefinitions="3*,2*">
        <!-- Top section: Camera preview -->
        <Grid Grid.Row="0" BackgroundColor="Black">
            <local:CameraPreviewView x:Name="CameraPreview"
              HorizontalOptions="Fill"
              VerticalOptions="Fill"
                                     IsActive="True"/>
            
            <!-- Overlay với vùng quét -->
            <Grid x:Name="Overlay" 
                  InputTransparent="True"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill">
                <!-- Lớp mờ đen xung quanh vùng quét - dùng Grid với RowDefinitions và ColumnDefinitions -->
                <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="*,Auto,*">
                    <!-- Top dark area -->
                    <BoxView Grid.Row="0" Grid.ColumnSpan="3" BackgroundColor="Black" Opacity="0.6"/>
                    <!-- Bottom dark area -->
                    <BoxView Grid.Row="2" Grid.ColumnSpan="3" BackgroundColor="Black" Opacity="0.6"/>
                    <!-- Left dark area -->
                    <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Black" Opacity="0.6"/>
                    <!-- Right dark area -->
                    <BoxView Grid.Row="1" Grid.Column="2" BackgroundColor="Black" Opacity="0.6"/>
                    
                    <!-- Khung quét ở giữa -->
                    <Grid x:Name="ScanFrame"
                          Grid.Row="1"
                          Grid.Column="1"
                          WidthRequest="320"
                          HeightRequest="120"
                          BackgroundColor="Transparent">
                        <!-- Border khung quét với góc bo tròn và animation -->
                        <Border x:Name="ScanBorder"
                                Stroke="#00FF00"
                                StrokeThickness="3"
                                BackgroundColor="Transparent">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.StrokeDashArray>
                                <x:Double>15</x:Double>
                                <x:Double>8</x:Double>
                            </Border.StrokeDashArray>
                        </Border>
                        
                        <!-- 4 góc vuông để highlight -->
                        <Grid>
                            <!-- Top-left corner -->
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="40" 
                                     HeightRequest="4" 
                                     HorizontalOptions="Start" 
                                     VerticalOptions="Start"
                                     Margin="-2,-2,0,0"/>
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="4" 
                                     HeightRequest="40" 
                                     HorizontalOptions="Start" 
                                     VerticalOptions="Start"
                                     Margin="-2,-2,0,0"/>
                            
                            <!-- Top-right corner -->
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="40" 
                                     HeightRequest="4" 
                                     HorizontalOptions="End" 
                                     VerticalOptions="Start"
                                     Margin="0,-2,-2,0"/>
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="4" 
                                     HeightRequest="40" 
                                     HorizontalOptions="End" 
                                     VerticalOptions="Start"
                                     Margin="0,-2,-2,0"/>
                            
                            <!-- Bottom-left corner -->
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="40" 
                                     HeightRequest="4" 
                                     HorizontalOptions="Start" 
                                     VerticalOptions="End"
                                     Margin="-2,0,0,-2"/>
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="4" 
                                     HeightRequest="40" 
                                     HorizontalOptions="Start" 
                                     VerticalOptions="End"
                                     Margin="-2,0,0,-2"/>
                            
                            <!-- Bottom-right corner -->
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="40" 
                                     HeightRequest="4" 
                                     HorizontalOptions="End" 
                                     VerticalOptions="End"
                                     Margin="0,0,-2,-2"/>
                            <BoxView BackgroundColor="#00FF00" 
                                     WidthRequest="4" 
                                     HeightRequest="40" 
                                     HorizontalOptions="End" 
                                     VerticalOptions="End"
                                     Margin="0,0,-2,-2"/>
                        </Grid>
                    </Grid>
                </Grid>
                
                <!-- Hướng dẫn phía trên -->
                <Grid Padding="20" VerticalOptions="Start" BackgroundColor="Transparent">
                    <Label Text="Đặt số Container/Seal vào khung quét"
                           TextColor="White"
                           FontSize="16"
                           BackgroundColor="#80000000"
                           Padding="12"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"/>
                </Grid>
            </Grid>
        </Grid>

        <!-- Bottom section: White card với result -->
        <Grid Grid.Row="1"
              BackgroundColor="White"
              Padding="20"
              RowDefinitions="Auto,Auto,*,Auto">
            <!-- Label -->
            <Label x:Name="ContainerLabel"
                   Grid.Row="0"
                   Text="Số Container"
                   TextColor="#999999"
                   FontSize="14"
                   Margin="0,0,0,8"/>

            <!-- Recognized text với checkmark -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                <Label x:Name="ResultLabel"
                       Grid.Column="0"
                       Text="Đang quét..."
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#999999"
                       VerticalOptions="Center"/>
                <Label x:Name="CheckmarkIcon"
                       Grid.Column="1"
                       Text="✓"
                       FontSize="24"
                       TextColor="#007AFF"
                       BackgroundColor="#E3F2FD"
                       WidthRequest="40"
                       HeightRequest="40"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       IsVisible="False"/>
            </Grid>

            <!-- Spacer -->
            <BoxView Grid.Row="2"/>

                   <!-- Capture & Scan and CONFIRM buttons -->
                   <Grid Grid.Row="3" ColumnDefinitions="*,Auto" ColumnSpacing="12">
                       <Button
                           Grid.Column="0"
                           x:Name="CaptureButton"
                           Text="CHỤP &amp; QUÉT"
                           BackgroundColor="#34C759"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           CornerRadius="12"
                           HeightRequest="56"
                           Clicked="OnCaptureClicked"/>

                       <Button Grid.Column="1"
                    x:Name="ConfirmButton"
                    Text="XÁC NHẬN"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="56"
                    IsEnabled="False"
                    Clicked="OnConfirmClicked"/>
                   </Grid>
        </Grid>
    </Grid>
</ContentPage>

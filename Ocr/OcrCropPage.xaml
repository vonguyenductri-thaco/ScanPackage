                    TextColor="White"
                    Clicked="OnScanFullClicked"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BorderColor="White"
                    BorderWidth="2"
                    Padding="0"/>
        </Grid>
    </Grid>
</ContentPage>




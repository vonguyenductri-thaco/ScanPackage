                    FontSize="16"
                    Clicked="OnCancelClicked"
                    Padding="0"
                    WidthRequest="60"/>

            <!-- Title -->
            <Label Grid.Column="1"
                   Text="QuÃ©t Container"
                   x:Name="TitleLabel"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>

            <!-- Help Button -->
            <Button Grid.Column="2"
                    Text="?"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    FontSize="20"
                    FontAttributes="Bold"
                    Clicked="OnHelpClicked"
                    Padding="0"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BorderColor="White"
                    BorderWidth="2"/>
        </Grid>

        <!-- Camera Preview Area -->
        <Grid Grid.Row="1">
            <!-- ScrollView cho phÃ©p pan hÃ¬nh áº£nh -->
            <ScrollView x:Name="ImageScrollView"
                       Orientation="Both"
                       HorizontalScrollBarVisibility="Never"
                       VerticalScrollBarVisibility="Never">
                <Image x:Name="PhotoView"
                       Aspect="AspectFit"
                       BackgroundColor="Black"/>
            </ScrollView>

            <!-- Overlay vá»›i khung quÃ©t -->
            <Grid x:Name="Overlay"
                  InputTransparent="True"
                  HorizontalOptions="Fill"
                  VerticalOptions="Fill">

                <!-- Lá»›p má» Ä‘en xung quanh -->
                <BoxView BackgroundColor="Black" Opacity="0.4"/>

                <!-- Khung quÃ©t cá»‘ Ä‘á»‹nh á»Ÿ giá»¯a (mÃ u xanh lÃ¡) -->
                <Grid x:Name="CropFrame"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      WidthRequest="340"
                      HeightRequest="140"
                      BackgroundColor="Transparent">

                    <!-- Border mÃ u xanh lÃ¡ vá»›i gÃ³c bo trÃ²n -->
                    <Border Stroke="#34C759"
                            StrokeThickness="3"
                            Background="Transparent">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                    </Border>

                    <!-- Hint text -->
                    <Label Text="ÄÆ°a sá»‘ Container vÃ o khung nÃ y"
                           TextColor="White"
                           FontSize="13"
                           BackgroundColor="#80000000"
                           Padding="12,6"
                           HorizontalOptions="Center"
                           VerticalOptions="End"
                           Margin="0,0,0,8"
                           Opacity="0.9"/>
                </Grid>
            </Grid>

            <!-- Zoom controls overlay (top right) -->
            <VerticalStackLayout Grid.Row="0"
                                HorizontalOptions="End"
                                VerticalOptions="Start"
                                Margin="16,16"
                                Spacing="8">

                <!-- Zoom In -->
                <Button Text="+"
                        BackgroundColor="#80000000"
                        TextColor="White"
                        FontSize="24"
                        FontAttributes="Bold"
                        WidthRequest="44"
                        HeightRequest="44"
                        CornerRadius="22"
                        Clicked="OnZoomInClicked"
                        Padding="0"
                        BorderColor="White"
                        BorderWidth="1"/>

                <!-- Zoom Out -->
                <Button Text="âˆ’"
                        BackgroundColor="#80000000"
                        TextColor="White"
                        FontSize="24"
                        FontAttributes="Bold"
                        WidthRequest="44"
                        HeightRequest="44"
                        CornerRadius="22"
                        Clicked="OnZoomOutClicked"
                        Padding="0"
                        BorderColor="White"
                        BorderWidth="1"/>
            </VerticalStackLayout>
        </Grid>

        <!-- Bottom Control Bar (Blue) -->
        <Grid Grid.Row="2"
              BackgroundColor="#007AFF"
              Padding="16,12"
              ColumnDefinitions="Auto,*,Auto,*,Auto"
              ColumnSpacing="12">

            <!-- Retake Button -->
            <Button Grid.Column="0"
                    Text="ðŸ“·"
                    FontSize="20"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Clicked="OnRetakeClicked"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BorderColor="White"
                    BorderWidth="2"
                    Padding="0"/>

            <Label Grid.Column="1"
                   Text="Chá»¥p láº¡i"
                   TextColor="White"

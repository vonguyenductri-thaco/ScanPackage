            <!-- Capture/Scan Button (Large Center) -->
            <Button Grid.Column="2"
                    x:Name="CaptureButton"
                    BackgroundColor="White"
                    WidthRequest="70"
                    HeightRequest="70"
                    CornerRadius="35"
                    Clicked="OnScanRegionClicked"
                    Padding="0"
                    BorderColor="#007AFF"
                    BorderWidth="4">
                <Button.Shadow>
                    <Shadow Brush="Black"
                            Offset="0,2"
                            Radius="8"
                            Opacity="0.3"/>
                </Button.Shadow>
            </Button>

            <Label Grid.Column="3"
                   Text="QuÃ©t toÃ n bá»™"
                   TextColor="White"
                   FontSize="12"
                   VerticalOptions="Center"
                   HorizontalOptions="End"/>

            <!-- Full Scan Button -->
            <Button Grid.Column="4"
                    Text="ðŸ“„"
